		"eslint-plugin-vue": "^5.0.0",
		"file-loader": "^2.0.0",
		"jest": "^23.6.0",
		"jest-serializer-vue": "^2.0.2",
		"node-sass": "^4.10.0",
		"prettier-eslint": "^8.8.2",
		"sass-loader": "^7.1.0",
		"stylelint": "^8.4.0",
		"stylelint-config-recommended-scss": "^3.2.0",
		"stylelint-scss": "^3.4.1",
		"stylelint-webpack-plugin": "^0.10.5",
		"vue-jest": "^3.0.1",
		"vue-loader": "^15.4.2",
		"vue-template-compiler": "^2.5.19",
		"webpack": "^4.27.1",
		"webpack-cli": "^3.1.2",
		"webpack-merge": "^4.1.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"vue"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"transform": {
			"^.+\\.js$": "babel-jest",
			"^.+\\.vue$": "vue-jest"
		},
		"snapshotSerializers": [
			"<rootDir>/node_modules/jest-serializer-vue"
		],
		"globals": {
			"t": true,
			"n": true,
			"OC": true,
			"OCA": true
		}
	}
