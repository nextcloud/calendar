{
	"name": "calendar",
	"description": "A calendar app for Nextcloud. Easily sync events from various devices, share and edit them online.",
	"version": "2.0.0-beta2",
	"author": "Georg Ehrke <oc.list@georgehrke.com>",
	"contributors": [
		"Georg Ehrke <oc.list@georgehrke.com>",
		"Thomas Citharel <tcit@tcit.fr>"
	],
	"keywords": [
		"nextcloud",
		"calendars",
		"vevent",
		"caldav"
	],
	"bugs": {
		"url": "https://github.com/nextcloud/calendar/issues"
	},
	"repository": {
		"url": "https://github.com/nextcloud/calendar",
		"type": "git"
	},
	"homepage": "https://github.com/nextcloud/calendar",
	"license": "agpl",
	"private": true,
	"scripts": {
		"dev": "webpack --config webpack.dev.js",
		"watch": "webpack --progress --watch --config webpack.dev.js",
		"build": "webpack --progress --hide-modules --config webpack.prod.js",
		"lint": "eslint --ext .js,.vue src",
		"lint:fix": "eslint --ext .js,.vue src --fix",
		"stylelint": "stylelint src",
		"stylelint:fix": "stylelint src --fix",
		"test": "jest",
		"test:coverage": "jest --coverage"
	},
	"dependencies": {
		"@fullcalendar/core": "^4.3.1",
		"@fullcalendar/daygrid": "^4.3.0",
		"@fullcalendar/interaction": "^4.3.0",
		"@fullcalendar/list": "^4.3.0",
		"@fullcalendar/timegrid": "^4.3.0",
		"@fullcalendar/vue": "^4.3.1",
		"@nextcloud/auth": "^0.3.1",
		"@nextcloud/axios": "^0.5.0",
		"@nextcloud/l10n": "^0.2.1",
		"@nextcloud/logger": "^0.1.0",
		"@nextcloud/moment": "^0.2.2",
		"@nextcloud/router": "^0.1.0",
		"@nextcloud/vue": "^1.2.2",
		"calendar-js": "git+https://github.com/georgehrke/calendar-js.git",
		"cdav-library": "github:nextcloud/cdav-library",
		"color-convert": "^2.0.1",
		"core-js": "^3.4.5",
		"debounce": "^1.2.0",
		"jstz": "^2.1.1",
		"md5": "^2.2.1",
		"p-limit": "^2.2.1",
		"uuid": "^3.3.3",
		"v-autosize": "^1.0.3",
		"v-tooltip": "^2.0.2",
		"vue": "^2.6.10",
		"vue-click-outside": "^1.0.7",
		"vue-clipboard2": "^0.3.1",
		"vue-router": "^3.1.3",
		"vuex": "^3.1.2",
		"vuex-router-sync": "^5.0.0"
	},
	"browserslist": [
		"extends browserslist-config-nextcloud"
	],
	"engines": {
		"node": ">=10.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.7.4",
		"@babel/plugin-syntax-dynamic-import": "^7.7.4",
		"@babel/preset-env": "^7.7.6",
		"@vue/test-utils": "^1.0.0-beta.30",
		"babel-core": "^7.0.0-bridge.0",
		"babel-eslint": "^10.0.3",
		"babel-jest": "^24.9.0",
		"babel-loader": "^8.0.6",
		"browserslist-config-nextcloud": "0.1.0",
		"css-loader": "^3.2.0",
		"eslint": "^5.16.0",
		"eslint-config-nextcloud": "0.1.0",
		"eslint-config-standard": "^12.0.0",
		"eslint-friendly-formatter": "^4.0.1",
		"eslint-loader": "^3.0.3",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-nextcloud": "^0.3.0",
		"eslint-plugin-node": "^10.0.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"eslint-plugin-vue": "^5.2.3",
		"file-loader": "^5.0.2",
		"jest": "^24.9.0",
		"jest-serializer-vue": "^2.0.2",
		"node-sass": "^4.13.0",
		"prettier-eslint": "^9.0.1",
		"regenerator-runtime": "^0.13.3",
		"sass-loader": "^7.3.1",
		"stylelint": "^12.0.0",
		"stylelint-bare-webpack-plugin": "^1.1.3",
		"stylelint-config-recommended-scss": "^4.1.0",
		"stylelint-scss": "^3.13.0",
		"stylelint-webpack-plugin": "^1.1.2",
		"terser-webpack-plugin": "^2.2.1",
		"vue-jest": "^3.0.5",
		"vue-loader": "^15.7.2",
		"vue-template-compiler": "^2.6.10",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.10",
		"webpack-merge": "^4.2.2"
	},
	"optionalDependencies": {
		"fsevents": "^2.1.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"vue"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"transform": {
			".*\\.js$": "<rootDir>/node_modules/babel-jest",
			".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
		},
		"snapshotSerializers": [
			"<rootDir>/node_modules/jest-serializer-vue"
		],
		"coverageDirectory": "./coverage/",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.{js,vue}",
			"!**/node_modules/**"
		],
		"coverageReporters": [
			"json",
			"text",
			"html",
			"lcov",
			"clover"
		],
		"transformIgnorePatterns": [
			"/node_modules/(?!calendar-js).+\\.js$"
		],
		"setupFilesAfterEnv": [
			"./tests/javascript/jest.setup.js"
		]
	}
}
